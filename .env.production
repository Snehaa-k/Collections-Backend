# Production Environment Variables for Render
NODE_ENV=production
PORT=10000

# Database (will be provided by Render PostgreSQL)
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis (will be provided by Render Redis)
REDIS_HOST=
REDIS_PORT=6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secure-production-jwt-secret-key-change-this-12345
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# CORS Origins (add your frontend domain)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-api-domain.onrender.com